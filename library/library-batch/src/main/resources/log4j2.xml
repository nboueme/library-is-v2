<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%highlight{%-5level} [%t] %c : %m%n"/>
        </Console>
        <File name="BATCH" fileName="/logs/batch.log">
        <!--File name="BATCH" fileName="/Users/nicolasboueme/Documents/java/javaee/library-is-v2/docker/batch/app/logs/batch.log"-->
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="BATCH"/>
        </Async>
    </Appenders>

    <Loggers>
        <Root name="com.nb.library.batch" level="info" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>
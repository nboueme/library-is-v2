<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- =============================================================== -->
    <!-- Project information -->
    <!-- =============================================================== -->
    <!-- ===== Maven parent project ===== -->
    <parent>
        <artifactId>library</artifactId>
        <groupId>com.nb.library</groupId>
        <version>1.0.1</version>
    </parent>

    <!-- ===== Maven information ===== -->
    <artifactId>library-client</artifactId>
    <packaging>jar</packaging>

    <!-- ===== General information ===== -->
    <name>library-client</name>
    <url>http://maven.apache.org</url>

    <!-- =============================================================== -->
    <!-- Dependencies -->
    <!-- =============================================================== -->
    <dependencies>
        <!-- ===== Third-party libraries ===== -->
    </dependencies>

    <!-- =============================================================== -->
    <!-- Build -->
    <!-- =============================================================== -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sourceDestDir>${project.basedir}/src/main/java</sourceDestDir>
                    <wsdlUrls>
                        <wsdlUrl>http://web-service:8080/library/AuthorService?wsdl</wsdlUrl>
                        <wsdlUrl>http://web-service:8080/library/BorrowingService?wsdl</wsdlUrl>
                        <wsdlUrl>http://web-service:8080/library/EditorService?wsdl</wsdlUrl>
                        <wsdlUrl>http://web-service:8080/library/ReservationService?wsdl</wsdlUrl>
                        <wsdlUrl>http://web-service:8080/library/TypeWorkService?wsdl</wsdlUrl>
                        <wsdlUrl>http://web-service:8080/library/UserService?wsdl</wsdlUrl>
                        <wsdlUrl>http://web-service:8080/library/WorkService?wsdl</wsdlUrl>
                    </wsdlUrls>
                    <!--wsdlUrls>
                        <wsdlUrl>http://localhost:8080/library/AuthorService?wsdl</wsdlUrl>
                        <wsdlUrl>http://localhost:8080/library/BorrowingService?wsdl</wsdlUrl>
                        <wsdlUrl>http://localhost:8080/library/EditorService?wsdl</wsdlUrl>
                        <wsdlUrl>http://localhost:8080/library/ReservationService?wsdl</wsdlUrl>
                        <wsdlUrl>http://localhost:8080/library/TypeWorkService?wsdl</wsdlUrl>
                        <wsdlUrl>http://localhost:8080/library/UserService?wsdl</wsdlUrl>
                        <wsdlUrl>http://localhost:8080/library/WorkService?wsdl</wsdlUrl>
                    </wsdlUrls-->
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
